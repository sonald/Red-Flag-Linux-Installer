script(type="text/template", id="easy_part_tmpl").
    .part_table#easy_part_table
        -for (var i in disks)
            - disk = disks[i]
            p.diskinfo
                = disk["path"]
                ="("
                = disk["size"].toFixed(2)
                = disk["unit"]
                =")"
            - var parts = disk["table"]
            ul.wat-cf.disk
                - for (var p in parts)
                    -var part = parts[p]
                    -var ty = part["ty"]
                    -if (part["ty"] == "extended")
                        - continue
                    -if (part["number"]<0)
                        -ty = "free"
                    -var percent = part["size"]*100/disk["size"]
                    li.horizontal(style = "width:" + percent + "%")
                        ul.wat-cf.part(pnum=p,dnum=i,psize=part["size"],pty=ty)
                            li
                                a(href="#")
                                    - if (part["number"] < 0)
                                        ="free"
                                    - else
                                        =part["number"]
                                    ="("
                                    = Number(part["size"]).toFixed(2)
                                    = disk["unit"]
                                    =")"
                                a(href="#")
                                    - if (part["fs"] === "")
                                        br
                                    -else
                                        = part["fs"]
    .warninfo
        br
    table
        tbody
            tr
                td(bgcolor="#304531",height="20",width="20")
                td= "primary"
                td(bgcolor="#72352d",height="20",width="20")
                td= "logical"
                td(bgcolor="#354668",height="20",width="20")
                td= "free"
                td(bgcolor="#D66B6B",height="20",width="20")
                td= "selected"
