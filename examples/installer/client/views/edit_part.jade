script(type="text/template", id="edit_part_tmpl").
    .modal.fade.hide(id=String(dindex)+String(pindex))
        .modal-header
            button.close(type="button", data-dismiss="modal")Ã—
            h3= gettext('EditDisk')
        .modal-body
            div.control-group.form-horizontal
                label.control-label(for="size")= gettext('Size')
                .controls
                    input.disabled#size(disabled, placeholder=(part.size).toFixed(2))
            div.control-group.form-horizontal
                label.control-label(for="parttype")= gettext('PartType')
                .controls
                    select.span3#parttype(disabled)
                        option(value="primary")= gettext('primary')
                        option(value="logical")= gettext('logical')
                        option(value="extended")= gettext('extended')
            div.control-group.form-horizontal
                label.control-label(for="fs")= gettext('FileSystem')
                .controls
                    select.span3#fs
                        option(value="ext4") ext4
                        option(value="swap") swap
                        -if (type == "gpt")
                            option(value="bios_grub") bios_grub
            div.control-group.form-horizontal
                label.control-label(for="mp")= gettext('MountPoint')
                .controls
                    select.span3#mp(mp="")
                        option(value="")= ""
                        option(value="/")= "/"
                        option(value="/opt")= "/opt"
        .modal-footer
                button.btn.delete(data-dismiss="modal", number=part.number, path=path,style="float:left;")= gettext('Remove')
                button.btn(data-dismiss="modal")= gettext('Close')
                button.btn.btn-primary.js-edit-submit(data-dismiss="modal",path=path,number=part.number)= gettext('Submit')

