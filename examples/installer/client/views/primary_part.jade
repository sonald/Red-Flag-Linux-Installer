script(type="text/template", id="primary_part_tmpl").
    li.primary.horizontal
        button.delete.close(type="button",number=part.number,path=part.path)×
        ul.wat-cf.part(number=part.number,pty="primary")
            li
                a(href="#")
                    = Number(part.size).toFixed(2)
                    = unit
            li
                a(href="#")= gettext(part.ty)
            li
                a.partfs(href="#")= part.fs
            li
                a.partmp(href="#")= gettext("MountPoint:")
            li
                a.edit(data-toggle="modal", href="#"+String(dindex)+String(pindex))= gettext('Edit')
                .modal.fade.hide(id=String(dindex)+String(pindex))
                    .modal-header
                        button.close(type="button", data-dismiss="modal")×
                        h3= gettext('EditDisk')
                    .modal-body
                        div.control-group.form-horizontal
                            label.control-label(for="mp")= gettext('MountPoint')
                            .controls
                                select.span3#mp
                                    option(value="") ""
                                    option(value="/")= "/"
                                    option(value="/opt")= "/opt"
                        div.control-group.form-horizontal
                            label.control-label(for="fs")= gettext('FileSystem')
                            .controls
                                select.span3#fs
                                    option(value="ext4") ext4
                                    option(value="linux-swap(v1)") swap
                    .modal-footer
                            a.btn(href="#", data-dismiss="modal")= gettext('Close')
                            a.btn.btn-primary.js-edit-submit(href="#", data-dismiss="modal",path=part.path,number=part.number)= gettext('Submit')
